{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "outDir": "./dist",
    "rootDir": ".",
    "declaration": false,
    "sourceMap": true,
    "noEmit": false,
    "noEmitOnError": false,
    "strict": false,
    "suppressImplicitAnyIndexErrors": false,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "moduleResolution": "node"
  },
  "include": [
    "desktop/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
